[manager]

prepend_keymap = [

  # -------------------------------
  # NAVIGATION (Teleporting)
  # -------------------------------

  { on = [ "g", "d" ], run = "cd ~/Downloads",    desc = "Go to Downloads" },
  { on = [ "g", "c" ], run = "cd ~/.config",      desc = "Go to Config" },
  { on = [ "g", "h" ], run = "cd ~",               desc = "Go Home" },
  { on = [ "g", "v" ], run = "cd ~/.local/bin",    desc = "Go to Scripts" },
  { on = [ "g", "p" ], run = "cd ~/Projects",      desc = "Go to Projects" },

  # -------------------------------
  # VISIBILITY
  # -------------------------------

  { on = [ "." ], run = "hidden toggle", desc = "Toggle hidden files" },

  # -------------------------------
  # SELECTION (MULTI-SELECT)
  # -------------------------------

  # Toggle single selection and move down
  { on = [ "<Space>" ], run = [ "select --state=none", "arrow 1" ], desc = "Toggle selection" },

  # Range selection (Shift+click equivalent)
  { on = [ "v" ], run = "visual", desc = "Visual range select" },

  # Select all
  { on = [ "V" ], run = "select --all", desc = "Select all" },

  # Invert selection
  { on = [ "I" ], run = "select --invert", desc = "Invert selection" },

  # Clear selection
  { on = [ "u" ], run = "select --none", desc = "Unselect all" },

  # -------------------------------
  # TERMINAL OPEN (YOUR REQUIREMENT)
  # -------------------------------

  # Enter -> open directory in terminal
  { on = [ "<Enter>" ], run = "shell", desc = "Open shell here" },

  # o -> open directory in terminal
  { on = [ "o" ], run = "shell", desc = "Open shell here" },

  # Go up directory
  { on = [ "<Backspace>" ], run = "leave", desc = "Go up directory" },

  # -------------------------------
  # OPEN WITH (MULTIPLE EDITORS)
  # -------------------------------

  # Open selected file(s) in micro
  { on = [ "m" ], run = "shell 'micro $@'", desc = "Open in micro" },

  # Open selected file(s) in VS Code
  { on = [ "c" ], run = "shell 'code $@'", desc = "Open in VS Code" },

  # -------------------------------
  # COPY
  # -------------------------------

  # Copy selected paths to clipboard (Wayland)
  { on = [ "y" ], run = [ "yank", "shell --confirm 'printf \"%s\n\" \"$@\" | wl-copy'" ], desc = "Copy path(s)" },

]
